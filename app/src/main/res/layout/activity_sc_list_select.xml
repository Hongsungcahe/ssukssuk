<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceCenter.ScListSelectActivity">

    <TextView
        android:id="@+id/tv_SLVA_Title"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/border"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_SLVA_Post"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SLVA_Title" />

    <Button
        android:id="@+id/btn_SLVA_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="수정하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SLVA_Post" />

    <Button
        android:id="@+id/btn_SLVA_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:text="삭제하기"
        app:layout_constraintBottom_toBottomOf="@+id/btn_SLVA_Edit"
        app:layout_constraintStart_toEndOf="@+id/btn_SLVA_Content"
        app:layout_constraintTop_toTopOf="@+id/btn_SLVA_Edit"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/Sc_list_answer_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_SLVA_Content" />

    <TextView
        android:id="@+id/tv_SLVA_Writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_SLVA_Title"
        app:layout_constraintTop_toBottomOf="@+id/tv_SLVA_Title" />

    <Button
        android:id="@+id/btn_SLVA_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="댓글작성"
        app:layout_constraintStart_toEndOf="@+id/btn_SLVA_Edit"
        app:layout_constraintTop_toTopOf="@+id/btn_SLVA_Edit" />

</androidx.constraintlayout.widget.ConstraintLayout>