<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceCenter.ScEditActivity">

    <Button
        android:id="@+id/btn_SEA_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"

        android:layout_marginTop="65dp"
        android:text="수정하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_SEA_Post" />

    <EditText
        android:id="@+id/edt_SEA_Title"
        android:layout_width="252dp"
        android:layout_height="50dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background = "@android:color/transparent"/>

    <EditText
        android:id="@+id/edt_SEA_Post"
        android:layout_width="258dp"
        android:layout_height="129dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="254dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="dd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_SEA_Title" />

</androidx.constraintlayout.widget.ConstraintLayout>