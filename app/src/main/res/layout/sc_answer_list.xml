<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/answer_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="날짜"
        android:textColor="#43000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/answer_writer2"
        app:layout_constraintStart_toEndOf="@+id/answer_writer2" />

    <TextView
        android:id="@+id/answer_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/answer_writer2"
        app:layout_constraintTop_toBottomOf="@+id/answer_writer2" />

    <TextView
        android:id="@+id/answer_writer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:text="작성자"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>